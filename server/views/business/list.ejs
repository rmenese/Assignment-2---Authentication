<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %> 

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>Business Contacts</h1>

            <% if(typeof displayName == 'string' && displayName) {%>
            <a href="/business-list/add"  class="btn btn-primary" role = "button">
            <i class="fas fa-plus-circle"></i> Add a Business Contacts</a>
            <% } %>
            <br>
  
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                  <tr>
                  
                      <th class="text-center">Contact Name</th>
                      <th class="text-center">Contact Number</th>
                      <th class="text-center">Email</th>
                      <th class="text-center"></th>
                      <th class="text-center"></th>
                      <% if(typeof displayName == 'string' && displayName) {%>
                        <th>class="text-center"</th>
                        <th>class="text-center"</th>
                      <% } %>
                  </tr>
  
                  <!--Repeatable Temple Row -->
  
                  <% for (let count = 0; count < BusinessContactsList.length; count++) { %>
                        
                  
                      <tr>
                          
                            <td class="text-center"><%= BusinessContactsList[count].contactname %></td>
                            <td class="text-center"><%= BusinessContactsList[count].contactnumber %></td>
                            <td class="text-center"><%= BusinessContactsList[count].email %></td>
                             <td class="text-center">
                                    <a href="/contacts-list/edit/<%= BusinessContactsList[count]._id %>" class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil alt"></i> Edit</a>
                            </td>
                             <td class="text-center">
                                    <a href="/contacts-list/delete/<%= BusinessContactsList[count]._id %>" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"> Delete</i></a>
                            </td>
                            <% if(typeof displayName == 'string' && displayName) {%>
                            <td class="text-center">
                                    <a href="/contacts-list/edit/<%= BusinessContactsList[count]._id %>" class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil alt"></i> Edit</a>
                            </td>
                            <td class="text-center">
                                    <a href="/contacts-list/delete/<%= BusinessContactsList[count]._id %>" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"> Delete</i></a>
                            </td>
                            <% } %>
                      </tr>
                  
                    <% } %>
                  
              </table>
        </div>
    </div>
  
<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>














